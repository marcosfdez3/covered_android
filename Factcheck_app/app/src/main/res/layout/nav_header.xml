<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="#C8D3C8"
    android:gravity="center_vertical"
    android:layout_marginTop="35dp">

    <!-- Avatar circular con icono de usuario -->
    <ImageView
        android:id="@+id/imgUserAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/button_outline"
        android:background="@drawable/circle_gray"
        android:padding="8dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitado"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Email del usuario -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión para guardar tu historial"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Botón de Login/Logout -->
        <Button
            android:id="@+id/btnAuth"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:background="@drawable/sesion_rounded"
            android:text="Iniciar Sesión"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>